# Application Settings
APP_NAME="RATP Live Tracker"
APP_VERSION="1.0.0"
ENVIRONMENT="development"
DEBUG=True

# Server Configuration
HOST="0.0.0.0"
PORT=8000
RELOAD=True

# Database
DATABASE_URL="sqlite+aiosqlite:///./ratp.db"

# Redis Cache (optional, falls back to in-memory cache if not available)
REDIS_URL="redis://localhost:6379/0"
CACHE_ENABLED=True
CACHE_TTL_TRAFFIC=120  # 2 minutes
CACHE_TTL_SCHEDULES=30  # 30 seconds
CACHE_TTL_STATIONS=86400  # 24 hours

# RATP API Configuration
PRIM_API_URL="https://prim.iledefrance-mobilites.fr/marketplace"
PRIM_API_KEY=""  # Register at https://prim.iledefrance-mobilites.fr/
COMMUNITY_API_URL="https://api-ratp.pierre-grimaud.fr/v4"

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PRIM_TRAFFIC_PER_DAY=20000
RATE_LIMIT_PRIM_DEPARTURES_PER_DAY=1000

# CORS Settings
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]
CORS_ALLOW_CREDENTIALS=True

# Logging
LOG_LEVEL="INFO"
LOG_FORMAT="json"

# Discord Webhooks
DISCORD_WEBHOOK_ENABLED=True
DISCORD_RATE_LIMIT_SECONDS=60

# Forecasting
FORECAST_ENABLED=False
FORECAST_MODEL_PATH="./models/forecast_model.pkl"

# Security
SECRET_KEY="change-this-to-a-random-secret-key-in-production"
API_KEY_HEADER="X-API-Key"
